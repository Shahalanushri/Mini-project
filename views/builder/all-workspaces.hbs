<div class="page-content-wrapper main-content">
    <div class="container-md">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="mt-3 mb-3">Manage Your Workspace</h4>
            <a href="/builder/add-workspace" class="btn btn-dark">+ Add New Workspace</a>
        </div>
        <div class="card">
            <div class="card-body">
                <table class="w-100" id="dataTable">
                    <thead>
                        <tr>
                            <th>No.</th>
                            <th>Image</th>
                            <th data-type="date" data-format="YYYY/DD/MM">Added Date</th>
                            <th>Title</th>
                            <th>Price</th>
                            <th>Manage</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each workspaces}}
                        <tr>
                            <td>{{incremented @index}}</td>
                            <td><img src="/images/workspace-images/{{this._id}}.png" alt="" style="width: 5rem"></td>
                            <td>{{this.date}}</td>
                            <td>{{this.wname}}</td>
                            <td>{{this.Price}}</td>
                            <td><a href="/builder/delete-workspace/{{this._id}}" class="btn btn-danger btn-sm"><i
                                        class="bi bi-trash"></i></a></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>